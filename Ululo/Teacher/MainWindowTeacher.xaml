<Window x:Class="Ululo.Teacher.MainWindowTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ululo.Teacher"
        mc:Ignorable="d" Background="Transparent"
        WindowStartupLocation="CenterScreen" 
        Height="450" Width="800">
    
    <Grid>
        <Border Grid.Column="1" Background="#ffffff" CornerRadius="0 0 25 25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Расписание" Width="100" Style="{StaticResource button}" Margin="5"/>
                    <Button Content="Классы" Width="100" Style="{StaticResource button}" Margin="5"/>
                </StackPanel>
                <Frame Source="timetable.xaml" Grid.Row="10"/>
            </Grid>
        
        
        </Border>
    </Grid>
</Window>
