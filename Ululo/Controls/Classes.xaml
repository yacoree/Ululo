<UserControl x:Class="Ululo.Controls.Classes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:Name="classes" >
    <Grid>
        <Border Padding="15" Background="#8bc7fc" CornerRadius="25" Height="auto" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="{Binding Path=NameClass, ElementName=classes}" TextAlignment="Center" TextWrapping="Wrap" FontSize="22" Foreground="#ffffff" FontWeight="Bold"/>
                <TextBlock Text="{Binding Path=Office, ElementName=classes}"  FontSize="18" Foreground="#ffffff" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
